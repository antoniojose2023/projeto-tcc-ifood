<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayoutLojas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageLojas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:shapeAppearanceOverlay="@style/ImagemArrendondada"
        app:srcCompat="@drawable/mcdonalds"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textTituloLojas"
        style="@style/TextoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="MC Donalds"
        app:layout_constraintStart_toEndOf="@+id/imageLojas"
        app:layout_constraintTop_toTopOf="@+id/imageLojas"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textAvaliacaoLojas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/ic_star"
        android:text="4.1"
        android:textColor="#CDC118"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageLojas"
        app:layout_constraintTop_toBottomOf="@+id/textTituloLojas" />

    <TextView
        android:id="@+id/textLancheLojas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="Lanche"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textAvaliacaoLojas"
        app:layout_constraintTop_toBottomOf="@+id/textTituloLojas" />

    <TextView
        android:id="@+id/textKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="1km"
        android:textSize="@dimen/titulo6"
        app:layout_constraintStart_toEndOf="@+id/textLancheLojas"
        app:layout_constraintTop_toBottomOf="@+id/textTituloLojas" />

    <TextView
        android:id="@+id/textTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="40-50min"
        android:textSize="@dimen/titulo6"
        app:layout_constraintStart_toEndOf="@+id/imageLojas"
        app:layout_constraintTop_toBottomOf="@+id/textAvaliacaoLojas" />

    <TextView
        android:id="@+id/textPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="R$ 9,99"
        android:textSize="@dimen/titulo6"
        app:layout_constraintStart_toEndOf="@+id/textTempo"
        app:layout_constraintTop_toBottomOf="@+id/textLancheLojas" />

    <ImageView
        android:id="@+id/imageFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>