<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="BotaoEndereco" parent="Widget.AppCompat.Button.Borderless">
             <item name="android:textColor">@color/black</item>
             <item name="android:textSize">@dimen/titulo4</item>
             <item name="android:textAllCaps">true</item>
             <item name="android:drawableRight">@drawable/ic_arrow</item>
     </style>

    <style name="ImagemArrendondada" >
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImagemCantosArrendondados" >
        <item name="cornerSize">4%</item>
    </style>

    <style name="TextoTitulo">
        <item name="android:textSize">@dimen/titulo5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="chip_selecionado"
        parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color_selecionado</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor"></item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconVisible">true</item>
    </style>

</resources>